{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":dependencyDashboard", ":semanticCommitTypeAll(chore)"],
  "npm": {
    "rangeStrategy": "replace"
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["^@angular", "^angular-eslint", "^ng-packagr"],
      "groupName": "Angular ecosystem",
      "schedule": ["after 9pm on sunday"]
    },
    {
      "matchPackagePatterns": ["^semantic-release", "^@semantic-release/"],
      "groupName": "semantic-release tooling"
    },
    {
      "matchPackagePatterns": ["^husky", "^lint-staged", "^prettier"],
      "groupName": "dev UX"
    }
  ],
  "prConcurrentLimit": 5,
  "labels": ["dependencies", "renovate"],
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "timezone": "Asia/Ho_Chi_Minh",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}
